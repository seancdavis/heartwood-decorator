class <%= @klass %>Decorator < Heartwood::Decorator::Base

  decorates :<%= @name %> do
    #
    # Methods here will be attached directly to the <%= @klass %> object.
    # This means #self can be assumed to the the object. For example:
    #
    # def name
    #   title
    # end
    #
    # <%= @name %> = <%= @klass %>.new(title: 'Hello World')
    # <%= @name %>.name # => "Hello World"
    #
  end

end
